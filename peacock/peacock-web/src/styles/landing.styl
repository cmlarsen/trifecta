@import "common"

@media (max-width: 991px)
  .alert
    font-size: 32px
    button
      font-size: 54px

.main-logo
  width: 100%
  margin-bottom: 10px

.mailing-list-email
  width: 100%
  padding: 10px
  border: 1px solid #bbb
  border-radius: 2px
  color: #333
  outline: none
  font-size: 32px
  margin-bottom: 10px

.landing-main
  font-family: 'Lato', sans-serif
  text-align: center
  button
    font-size: 32px
  .landing-header
    font-size: 48px
    margin-bottom: 10px

.landing-container
  background: url("../img/landing.jpeg")
  background-size: cover
  background-position: center
  width: 100vw
  height: 100vh
  padding-top: 35vh

@media (min-width: 992px)
  .mailing-list-email
    font-size: 18px
  .landing-main
    button
      font-size: 18px
    .landing-header
      font-size: 28px

.sign-switch-container
  float: right
  line-height: 63px

.sign-switch
  border: solid 1px tf-white
  font-family: 'Lato', sans-serif
  color: tf-gray-1
  border-radius: 3px
  padding: 7px
  margin-right: 10px
  text-align: center
  &:hover
    border-color: tf-green-1
    color: tf-green-1
    text-decoration: none

  .tag-line
    color: tf-white
    font-family: 'Lato', sans-serif
    font-size: 28px
    text-shadow: 1px 1px 1px alpha(tf-black, 0.2)
    display: block
    max-width: 400px
    margin: 100px auto 50px auto
    text-align: center
  .sign-up-main
    background: alpha(tf-white, 0.6)
    border-radius: 5px
    padding: 40px 30px 20px 30px
    margin: 0 auto
    max-width: 400px
    .email-divider
      font-family: 'Lato', sans-serif
      font-size: 12px
      color: tf-gray-4
      margin: 10px 0
      display: block
      text-align: center
    form
      width: 100%
      margin-top: 5px
      input
        border: 1px solid tf-gray-1
        border-radius: 3px
        display: inline-block
        margin-bottom: 5px
        font-family: 'Lato', sans-serif
        padding: 10px
        width: 100%
      &:focus
        outline: none
      .first-name
        width: 49.25%
        margin-right: 1.5%
      .last-name
        width: 49.25%
    button
      width: 100%
      margin-top: 5px
    .footer
      font-family: 'Lato', sans-serif
      font-size: 12px
      color: tf-gray-4
      margin-top: 20px
      display: block
      text-align: center
      a
        color: tf-green-1
        font-weight: 700
        &:hover
          color: tf-gray-4
